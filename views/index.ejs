<% include partials/header %>


<div class="container">
    <header class="jumbotron">
      <div class ="container">
        <h1> Welcome to Pet-Yelp! </h1>
        <p>Find the Best Places in Town For Your Pet!</p>
        <p>
          <a class="btn btn-primary btn-large" href="/locations/new">Add New Location</a>
        </p>
    </div>
    </header>

    <div class="row">
      <div class="col-lg-12">
        <h3>Our Most Popular Locations</h3>
      </div>
    </div>

    <div class="row text-center" style:"display:flex; flex-wrap:wrap;">
      <% locations.forEach(function(location){ %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= location.image %>">
            <div class="caption">
                <h4><%= location.name %></h4>
            </div>
            <p>
              <a href="/locations/<%=location._id %>" class="btn btn-primary">More Info</a>
            </p>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

<% include partials/footer %>
